{
  "name": "llm-tokenizer",
  "displayName": "LLM Tokenizer",
  "description": "AI token counter for files and folders - supports 35+ models (GPT-5, Claude 4.5, Gemini 3, Grok, DeepSeek, and more)",
  "license": "MIT",
  "version": "1.1.0",
  "publisher": "matteoteodori",
  "author": {
    "name": "Matteo Teodori",
    "url": "https://github.com/matteo-teodori"
  },
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/matteo-teodori/llm-tokenizer"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Programming Languages"
  ],
  "keywords": [
    "tokenizer",
    "tokens",
    "gpt",
    "claude",
    "gemini",
    "llama",
    "ai",
    "llm",
    "deepseek",
    "grok"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "llm-tokenizer.countTokens",
        "title": "Count Tokens (AI Model)",
        "category": "LLM Tokenizer"
      },
      {
        "command": "llm-tokenizer.selectModel",
        "title": "Select LLM Model",
        "category": "LLM Tokenizer"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "llm-tokenizer.countTokens",
          "group": "1_modification@99"
        }
      ],
      "explorer/context": [
        {
          "command": "llm-tokenizer.countTokens",
          "group": "1_modification@99"
        }
      ]
    },
    "configuration": {
      "title": "LLM Tokenizer",
      "properties": {
        "llm-tokenizer.defaultModel": {
          "type": "string",
          "default": "gpt-5.2",
          "description": "Default model used for token counting",
          "enum": [
            "gpt-5.2",
            "gpt-oss-120b",
            "gpt-4o",
            "gpt-4o-mini",
            "o1",
            "o3-mini",
            "gpt-4",
            "gpt-3.5-turbo",
            "claude-4.5-sonnet",
            "claude-4.5-opus",
            "claude-4.5-haiku",
            "claude-3.5-sonnet",
            "claude-3-opus",
            "claude-3-haiku",
            "gemini-3-flash",
            "gemini-3-pro",
            "gemini-2.5-flash",
            "gemini-2.5-flash-lite",
            "gemini-2.5-pro",
            "gemini-2.0-flash",
            "gemini-1.5-pro",
            "grok-4.1-fast",
            "grok-4-fast",
            "grok-code-fast-1",
            "deepseek-v3.2",
            "deepseek-v3",
            "llama-3.2",
            "codellama",
            "mistral-large",
            "qwen-2.5-coder",
            "kimi-k2.5",
            "mimo-v2-flash",
            "minimax-m2.1",
            "glm-4.7",
            "glm-4.6",
            "glm-4.5"
          ],
          "enumItemLabels": [
            "GPT-5.2",
            "GPT-OSS 120B",
            "GPT-4o",
            "GPT-4o Mini",
            "o1",
            "o3-mini",
            "GPT-4 (Legacy)",
            "GPT-3.5 Turbo (Legacy)",
            "Claude Sonnet 4.5",
            "Claude Opus 4.5",
            "Claude Haiku 4.5",
            "Claude 3.5 Sonnet",
            "Claude 3 Opus",
            "Claude 3 Haiku",
            "Gemini 3 Flash Preview",
            "Gemini 3 Pro Preview",
            "Gemini 2.5 Flash",
            "Gemini 2.5 Flash Lite",
            "Gemini 2.5 Pro",
            "Gemini 2.0 Flash",
            "Gemini 1.5 Pro",
            "Grok 4.1 Fast",
            "Grok 4 Fast",
            "Grok Code Fast 1",
            "DeepSeek V3.2",
            "DeepSeek V3",
            "Llama 3.2",
            "CodeLlama",
            "Mistral Large",
            "Qwen 2.5 Coder",
            "Kimi K2.5",
            "MiMo-V2-Flash",
            "MiniMax M2.1",
            "GLM 4.7",
            "GLM 4.6",
            "GLM 4.5"
          ]
        },
        "llm-tokenizer.statusBarDisplay": {
          "type": "string",
          "enum": [
            "file",
            "project",
            "both"
          ],
          "enumDescriptions": [
            "Show only current file token count",
            "Show only project-wide token count",
            "Show both file and project token counts"
          ],
          "default": "file",
          "description": "Choose what to display in the status bar"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "release:patch": "npm version patch && npm run compile && vsce publish && ovsx publish",
    "release:minor": "npm version minor && npm run compile && vsce publish && ovsx publish",
    "release:major": "npm version major && npm run compile && vsce publish && ovsx publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/glob": "^9.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "25.1.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "glob": "^13.0.0",
    "mocha": "^11.7.5",
    "typescript": "^5.9.3",
    "@vscode/test-electron": "^2.5.2"
  },
  "dependencies": {
    "js-tiktoken": "^1.0.21"
  }
}